generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(80)
  status    Status @default(todo)
  quantity  Int      @default(0)
  createdAt DateTime @default(now()) @db.Timestamptz(6)
}

enum Status {
  todo
  doing
  done
}
